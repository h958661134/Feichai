<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">
    <TextView
        android:id="@+id/tv_servicesendtime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffff"
        android:textSize="10dp"/>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="20dp">
    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_servicehead"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/customer_service" />

        <TextView
            android:id="@+id/tv_servicename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#428E95"
            android:textSize="10dp" />

    </LinearLayout>
    <TextView
        android:layout_toRightOf="@+id/layout_three"
        android:id="@+id/tv_servicechat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text="回收旧报纸，量多的话价格为1元/4.5kg，旧书籍是1元/3.9kg"
        android:background="@drawable/chatto_bg_normal_left"/>
</LinearLayout>
</RelativeLayout>
