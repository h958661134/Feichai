<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FeedbackSettings">
    <LinearLayout
        android:id="@+id/setting_pre_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/green"
        android:orientation="horizontal">

        <LinearLayout
            android:onClick="prev"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/setting_prev"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:layout_weight="1"
                android:src="@drawable/prev"
                android:layout_marginTop="10dp"
                />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:text="返回"
                android:textSize="18sp"
                android:textColor="#F8D9BD"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="2.8"
            android:text="意见反馈"
            android:textSize="20sp"
            android:textColor="#F8D9BD"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="11">
        <EditText
            android:id="@+id/feedbackET"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:padding="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入您的意见/建议"
            android:textSize="18sp"
            android:focusedByDefault="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray1"/>
        <EditText
            android:id="@+id/feedbackNumET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:background="@null"
            android:gravity="top"
            android:hint="请输入您的手机号/邮箱"
            android:textSize="18sp"
            android:maxLines="2"
            android:focusedByDefault="false"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/gray1"/>
        <Button
            android:id="@+id/feedbackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:text="发送"
            android:textColor="@color/white"
            android:background="@color/green"/>
    </LinearLayout>
</LinearLayout>