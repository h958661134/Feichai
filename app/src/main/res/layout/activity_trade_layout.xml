<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ECECEC">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:background="#56A366">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="填写废品单"
            android:textColor="#fff"
            android:textSize="25dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.8"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:background="@drawable/tradebackground">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/dingwei"
            android:padding="10dp"
            android:layout_weight="1.2"/>
        <TextView
            android:id="@+id/trade_address"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@null"
            android:textSize="20sp"
            android:hint="点击添加交易地址"
            />
        <ImageView
            android:id="@+id/set_address"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="12dp"
            android:src="@drawable/next"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:background="#fff">
        <ImageView
            android:layout_marginLeft="15dp"
            android:layout_width="0dp"
            android:layout_weight="0.8"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/sale"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="match_parent"
            android:paddingLeft="10dp"
            android:paddingRight="5dp"
            android:orientation="vertical"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="名称:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/trade_goods_name"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="品牌:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/trade_goods_logo"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="#000"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="0dp"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="数量:"
                    android:textSize="15dp"
                    android:textColor="#000"/>
                <EditText
                    android:id="@+id/trade_goods_weight"
                    android:layout_width="0dp"
                    android:layout_weight="4"
                    android:layout_height="wrap_content"
                    android:textColor="#000"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1.5"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥"
                android:textColor="#B34342"
                android:textSize="22dp"
                android:layout_gravity="center"
                />
            <EditText
                android:id="@+id/trade_bill_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="预估价"
                android:textColor="#B34342"
                android:textColorHint="#ECECEC"
                android:textSize="20dp"/>
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#fff"
        android:layout_weight="0.6"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:text="预约时间:"
            android:textColor="#000"
            android:textSize="18dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <TextView
                android:id="@+id/tv_choose"
                android:layout_width="0dp"
                android:layout_weight="3"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_gravity="center"
                android:layout_toLeftOf="@+id/iv_choose"
                android:text="选择时间"
                android:textColor="#000"
                android:layout_centerInParent="true"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/iv_choose"
                android:layout_width="0dp"
                android:layout_weight="0.4"
                android:gravity="right"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:src="@drawable/next" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        android:background="#fff"
        android:gravity="center">
        <EditText
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:hint="给回收哥留言（选填，20字内）"
            android:textColorHint="#ECECEC"
            android:textSize="15dp"
            android:background="@null"
            android:textColor="#000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_weight="0.6"
        android:background="#fff">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1.8"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingLeft="8dp"
            android:text="一键呼叫客服"
            android:textColor="#000"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="0dp"
                android:layout_weight="0.7"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:src="@drawable/phone"
                android:layout_toLeftOf="@+id/tv_phone"/>

            <TextView
                android:id="@+id/tv_phone"
                android:layout_width="0dp"
                android:layout_weight="1.3"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="right"
                android:text="400-866-6688"
                android:textColor="#000"
                android:textSize="18dp"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@+id/iv_turnnext"/>
            <ImageView
                android:id="@+id/iv_turnnext"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:padding="3dp"
                android:layout_height="wrap_content"
                android:src="@drawable/next"
                android:layout_alignParentRight="true"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.2"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        >
        <Button
            android:id="@+id/button_tijiao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#56A366"
            android:text="提交订单"
            android:textSize="18dp"/>
    </LinearLayout>

    //底部栏
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8">

        <LinearLayout
            android:id="@+id/ll_bottom"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#fff"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="skip_to_activity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dd"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1.8"
                    android:src="@drawable/shouyeunclick" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="首页"
                    android:layout_weight="0.5"
                    android:textSize="10dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/dd"
                    android:textColor="#3C8F95"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/classify"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="skip_to_activity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/main_classify"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_centerInParent="true"
                    android:layout_weight="1.8"
                    android:src="@drawable/fenlei" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="0.5"
                    android:text="分类"
                    android:textSize="10dp"
                    android:textColor="#3C8F95" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/trade"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="skip_to_activity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dd5"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_weight="1.8"
                    android:layout_centerInParent="true"
                    android:src="@drawable/feichaicheclick" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="废柴车"
                    android:layout_weight="0.5"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/dd5"
                    android:textSize="10dp"
                    android:textColor="#3C8F95"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/map"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="skip_to_activity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dd3"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_weight="1.8"
                    android:layout_centerInParent="true"
                    android:src="@drawable/dingweichangeone" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地图"
                    android:layout_weight="0.5"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/dd3"
                    android:textSize="10dp"
                    android:textColor="#3C8F95"/>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/personal_center"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:onClick="skip_to_activity"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/dd4"
                    android:layout_width="25dp"
                    android:layout_height="35dp"
                    android:layout_weight="1.8"
                    android:layout_centerInParent="true"
                    android:src="@drawable/wode" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的"
                    android:layout_weight="0.5"
                    android:layout_centerInParent="true"
                    android:textSize="10dp"
                    android:layout_below="@+id/dd4"
                    android:textColor="#3C8F95"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</LinearLayout>