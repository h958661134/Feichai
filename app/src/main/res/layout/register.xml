<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:background="@drawable/background">

    <com.example.feichai.myapplication.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/register_head_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/head_sculpture"
        app:border_color="#ccc"
        app:border_width="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.029"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_user_name"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="88dp"
        android:background="@drawable/bg_edittext"
        android:drawableLeft="@drawable/user_head"
        android:drawablePadding="15dp"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:paddingLeft="15dp"
        android:textColor="#50935D"
        android:textColorHint="#50935D"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_title" />


    <Button
        android:id="@+id/register_app_sign_button"
        android:layout_width="133dp"
        android:layout_height="47dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/bg_edittext"
        android:text="立即注册"
        android:onClick="onClick_sign"
        android:textColor="#50935D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_address" />

    <EditText
        android:id="@+id/register_phone_code"
        android:layout_width="146dp"
        android:layout_height="42dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请输入验证码"
        android:inputType="textPersonName"
        android:textColorHint="#50935D"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/register_phone_getcode"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/register_user_name"
        app:layout_constraintTop_toBottomOf="@+id/register_user_name" />

    <Button
        android:id="@+id/register_phone_getcode"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/bg_edittext"
        android:text="获取验证码"
        android:onClick="onClick_sign"
        android:textColor="#50935D"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/register_user_name"
        app:layout_constraintTop_toBottomOf="@+id/register_user_name" />

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="注册"
        android:textSize="21sp"
        android:textColor="#fff"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/register_user_password"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请输入密码"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColorHint="#50935D"
        app:layout_constraintEnd_toEndOf="@+id/register_phone_getcode"
        app:layout_constraintTop_toBottomOf="@+id/register_phone_code" />

    <EditText
        android:id="@+id/register_user_password_again"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请再次输入密码"
        android:textSize="16sp"
        android:inputType="textPassword"
        android:textColorHint="#50935D"
        app:layout_constraintEnd_toEndOf="@+id/register_user_password"
        app:layout_constraintTop_toBottomOf="@+id/register_user_password" />

    <EditText
        android:id="@+id/register_address"
        android:layout_width="246dp"
        android:layout_height="40dp"
        android:layout_marginTop="22dp"
        android:ems="10"
        android:hint="请输入邮箱"
        android:textSize="16sp"
        android:inputType="textEmailAddress"
        android:textColorHint="#50935D"
        app:layout_constraintEnd_toEndOf="@+id/register_user_password_again"
        app:layout_constraintTop_toBottomOf="@+id/register_user_password_again" />


</android.support.constraint.ConstraintLayout>