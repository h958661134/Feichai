<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.example.feichai.myapplication.MyImageView
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/conversion_background"/>
    <LinearLayout
        android:id="@+id/layout_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:id="@+id/layout_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="15dp"
                android:layout_marginTop="3dp"
                android:layout_height="15dp"
                android:layout_marginLeft="20dp"
                android:src="@drawable/con_turnleft" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text=""
                android:textColor="@android:color/white"
                android:textSize="15dp" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >

            <ImageView
                android:id="@+id/iv_jiantou"
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:layout_toLeftOf="@+id/tv_entercompany"
                android:src="@drawable/con_down" />

            <TextView
                android:id="@+id/tv_entercompany"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="进入公司"
                android:textColor="@android:color/white"
                android:layout_alignParentRight="true"
                android:textSize="15dp" />
        </RelativeLayout>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/layout_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#50935D"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/menu"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:text="精  选"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="3dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"
                android:background="@drawable/organbackground"/>
            <TextView
                android:id="@+id/order_consult"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:text="订单查询"
                android:gravity="center"
                android:textSize="15dp"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:textColor="@android:color/black"
                android:layout_marginRight="10dp"
                android:background="@drawable/organbackground"/>
            <TextView
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:text="附近的店"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginRight="10dp"
                android:background="@drawable/organbackground"/>
            <TextView
                android:id="@+id/map"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:text="实时地图"
                android:layout_marginTop="3dp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:textSize="15dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/organbackground"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            >
            <ImageView
                android:id="@+id/trading"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/left"
                android:layout_gravity="center"
                android:background="#51935C"/>

            <EditText
                android:id="@+id/et_sendmessage"
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:background="@drawable/long_broader_two"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="5dp"
                android:textColor="@android:color/black"
                />

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:id="@+id/btn_send"
                android:layout_gravity="center"
                android:src="@drawable/right"
                android:background="#51935C"/>
        </LinearLayout>

    </LinearLayout>

    <ListView
        android:fitsSystemWindows="true"
        android:id="@+id/listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10.0dip"
        android:layout_above="@+id/layout_three"
        android:layout_below="@+id/layout_two"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10.0dip"
        android:divider="@null"
        android:dividerHeight="5dp"
        android:scrollbars="none"
        android:cacheColorHint="#00000000"
        android:transcriptMode="alwaysScroll"/>


</RelativeLayout>
