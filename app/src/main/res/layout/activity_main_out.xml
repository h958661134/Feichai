<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_Out"
    android:orientation="vertical"
    android:background="@drawable/background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3.5"
        android:gravity="center">

        <com.example.feichai.myapplication.circleimageview.CircleImageView
            android:id="@+id/main_out_head_image"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:src="@drawable/head_sculpture"
            app:border_width="1dp"
            app:border_color="#ccc"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/main_out_user_name"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/user_head"
            android:drawablePadding="15dp"
            android:hint="请输入用户名"
            android:textColor="@color/green"
            android:inputType="number"
            android:paddingLeft="15dp"
            android:textColorHint="@color/green"
            android:textSize="16sp"
            />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center">

        <EditText
            android:id="@+id/main_out_user_password"
            android:layout_width="240dp"
            android:layout_height="45dp"
            android:layout_gravity="center"
            android:background="@drawable/bg_edittext"
            android:drawableLeft="@drawable/lock"
            android:drawablePadding="15dp"
            android:ems="10"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:textColor="@color/green"
            android:paddingLeft="15dp"
            android:textColorHint="@color/green"
            android:textSize="16sp"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="right"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_out_find_password"
            android:layout_width="0dp"
            android:layout_weight="4.6"
            android:layout_height="wrap_content"
            android:text="忘记密码？"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textColor="@color/green"
            android:textSize="12sp"
             />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:gravity="center"
       android:layout_weight="1">
       <Button
           android:id="@+id/main_out_app_sign_button"
           android:layout_width="240dp"
           android:layout_height="40dp"
           android:layout_gravity="center"
           android:background="#F8D9BD"
           android:text="登录"
           android:textColor="@color/green"
           android:textSize="20sp"
           />

   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/main_out_register_button"
            android:layout_width="0dp"
            android:layout_weight="4.5"
            android:layout_height="wrap_content"
            android:text="还没有账号？立即注册！"
            android:layout_gravity="end"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textColor="@color/green"
             />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />


    </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="0.7"
       android:gravity="center"
       android:orientation="horizontal">


       <ImageView
           android:id="@+id/imageLeft"
           android:layout_width="66dp"
           android:layout_height="6dp"
           android:layout_gravity="center"
           android:src="@drawable/main_line1"
            />

       <TextView
           android:id="@+id/main_out_check_ways"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="你可以选择以下方式登录"
           android:layout_gravity="center"
           android:textColor="@color/green"
           />

       <ImageView
           android:id="@+id/imageRight"
           android:layout_width="66dp"
           android:layout_height="6dp"
           android:layout_gravity="center"

           android:src="@drawable/main_line2"
           />


   </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"

            android:layout_weight="1">

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:id="@+id/main_image_qq"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_qq"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/main_image_zhifubao"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_zhifubao"
                />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/main_image_weibo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_weibo"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/main_image_weixin"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/main_weixin"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_weight="1">

        </LinearLayout>


    </LinearLayout>



</LinearLayout>