<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_sendtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="2dp"
            android:layout_centerHorizontal="true"
            android:textColor="#ffffff"
            android:textSize="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="23dp">
    <TextView
        android:id="@+id/tv_userchat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/layout_one"
        android:textSize="15dp"
        android:textColor="@android:color/black"
        android:text="回收旧报纸，量多的话价格为1元/4.5kg，旧书籍是1元/3.9kg"
        android:background="@drawable/chatto_bg_normal"/>
    <RelativeLayout
        android:id="@+id/layout_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginRight="5dp"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true">

    <ImageView
        android:id="@+id/iv_userhead"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/you"/>
        <TextView
            android:layout_below="@id/iv_userhead"
            android:id="@+id/tv_username"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10dp"
            android:layout_gravity="center"
            android:textColor="#428E95"/>

    </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
